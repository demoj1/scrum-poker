<style>
.login-form {
  max-width: 400px;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  height: 100%;
  margin: auto;
}

html, body, main {
    height: 100%;
}
</style>


<div class="login-form">
    <h1>Simple scrum poker</h1>
    <%= form_for @conn, "/", fn f -> %>
        Введите свое имя: <%= text_input f, :name %>
        <%= submit "Войти" %>
    <% end %>
</div>
